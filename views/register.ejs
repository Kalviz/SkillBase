
<br><br>
<div class="container col-lg-3">
                <% include ./partials/messages %>
<h2> Create your account</h1>

<form method="POST" action="/users/register" autocomplete="off" id="org_form">
<div class="form-group">
        <label class="col-form-label" for="inputDefault">Email</label>
        <span class="mandatory">
        <input type="email" class="form-control" placeholder="Email" id="email" name="email">
        </span>    

</div>
<div class="form-group">
        <label class="col-form-label" for="inputDefault">First Name</label>
        <span class="mandatory">
        <input type="text" class="form-control" placeholder="First Name" id="firstName" name="firstName">
    </span>    

</div>
<div class="form-group">
        <label class="col-form-label" for="inputDefault">Last Name</label>
        <span class="mandatory">
        <input type="text" class="form-control" placeholder="Last Name" id="lastName" name="lastName">
    </span>

</div>

<div class="form-group">
        <label class="col-form-label" for="inputDefault">Password</label>
        <span class="mandatory">
        <input type="password" class="form-control" placeholder="" id="password1" name="password1">
    </span>

</div>

<div class="form-group">
        <label class="col-form-label" for="inputDefault">Re-enter Password</label>
        <span class="mandatory">
        <input type="password" class="form-control" placeholder="" id="password2" name="password2">
        <p class="help-block"><small>Re-enter your chosen password</a> *</small></p>

</div>
<div>
<div>
<label class="control-label" for="agree">Agreement</label><div class="controls">
        <label class="checkbox">
        <input type="checkbox" name="agree" id="agree"/> I have read and I agree to the Skills Base Terms of Use.</label>
</div></div><div class="control-group" style="text-align: center">
        <button type="submit" class="btn btn-primary" id="register">Create account</button>

    </div>
</div>








</form>




<div class="modal fade" id="acceptModal" role="dialog">                                    
        <div class="modal-dialog">                                
                <!-- Modal content-->
                <div class="modal-content">
                        <div class="modal-header" >
                                <h4 class="modal-title">Confirm email address<strong></strong></h4>
                                <button type="button" class="close" data-dismiss="modal">&times;</button>                                    
                        </div>
                        <div class="modal-body">    
                                <div class="row"> 
                                        <div class="form-group col-lg-9">
                                                <label for="task_id">It's important that the email address you entered is valid and correct in order to receive the registration email to access your new instance.

                                                    Is this your correct email address?</label>
                                        </div> 
                                </div>
                        </div>
                        <div class="modal-footer">                                    
                                <button type="button" class="btn btn-default" data-dismiss="modal">No</button>                    
                                <button type="submit" class="btn btn-primary" onclick="submitform()" >Yes</button>                                        
                        </div>
                </div>  
        </div>                                                                                      
</div>

<script>
    $(document).ready(function(){
        $("#acceptBtn").click(function(){
        $("#acceptModal").modal("toggle");
        
        });       

    });

    function submitform(){
        document.forms['org_form'].submit();
        };
    
</script>








