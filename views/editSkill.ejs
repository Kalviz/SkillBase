<div class="col-lg-9">
                <% include ./partials/messages %>
<h2> Edit Skill</h2>

<form method="POST" action="/skills/update/<%=rec._id%>" autocomplete="off" id="org_form">
<div class="form-group">        
        <div class="row" hidden>
                <div class="col-lg-3">
                        <p>Catagory :</p>
                </div>
                <div class="col-lg-4">
                        <input type="text" class="form-control" placeholder="Role Name" id="role_name" name="role_name">
                </div>
        </div>       
        
        <div class="row">                
                <div class="col-lg-3">
                        <p>Skill Name :</p>
                </div>  
                <div class="col-lg-4">
                        <input type="text" class="form-control" placeholder="Skill Name" id="skill_name" name="skill_name" value="<%=rec.skill_name%>">
                </div>
                </div>
                
         </div>
         <div class="row">
                        <div class="col-lg-3">
                                        <p>Description :</p>
                                </div>  
                                <div class="col-lg-4">
                                                <textarea class="form-control" id="description" name="description" rows="3"><%=rec.description%></textarea>
                                </div>
                                </div>
         
        <div>
                <div class="row">
                <div class="col-lg-3">
                </div>
                <div class="col-lg-4">
                                <button type="submit" class="btn btn-primary">Update</button>
                </div>
                </div>
        </div>
        <input type="hidden" class="form-control"  id="email" name="email" value="<%=user.email%>">

</form>

</div>