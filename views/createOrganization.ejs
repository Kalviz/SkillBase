<div class="col-lg-12">  
<div id="page-wrapper">       
    <!-- /.row -->
<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-primary">                    
            <div class="panel panel-heading">Create Organization</div>
            <% include ./partials/messages %>            
            <div> 
                    <nav aria-label="breadcrumb">
                            <ol class="breadcrumb breadcrumb-arrow">
                                    <li class="breadcrumb-item"><a href="/dashboard">Home</a></li>                                        
                                    <li class="breadcrumb-item active" aria-current="page">Create Organization</li>
                            </ol>
                            
                    </nav>
            </div>
            <!-- /.panel-heading -->
            <div class="panel-body">
                <div class="row">
                    <div class="col-lg-12">
                            <form method="POST" action="/organization/save" autocomplete="off">                                    
                                <div class="row">
                                    <div class="form-group col-lg-3">
                                        <label for="case_id">Orgaization ID</label>
                                    </div>
                                    <div class="form-group col-lg-3">                                                                                                
                                        <input class="form-control" placeholder="Orgaization ID" required name="organization_id" type="text" value="<%= typeof organization_id != 'undefined' ? organization_id : '' %>" id="organization_id">
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="form-group col-lg-3">
                                        <label for="case_id">Orgaization Name</label>
                                    </div>
                                    <div class="form-group col-lg-3">                                                                                                
                                        <input class="form-control" placeholder="Customer Name" required name="organization_name" type="text" value="<%= typeof organization_name != 'undefined' ? organization_name : '' %>" id="organization_name">
                                    </div>
                                </div>
                                <input class="btn btn-primary" type="submit" value="Submit">
                            </form>
                    </div>                    
                    </div>  
                </div>  
                
            </div>
        </div>
    </div>
    <div class="panel-body col-lg-12">
            <div class="table-responsive">                                  
            <table  class="table table-striped table-hover table-bordered display dt-responsive" cellspacing="0" style="white-space: nowrap; " id="basicdatatable">
            <thead>
                <tr>    
                        <th>Organization ID</th>
                        <th>Orgaization Name</th>                                        
                </tr>
            </thead>
            <tbody>
                    
                      <% orgs.forEach(function(org){%>
                        <tr>                                                                     
                        <td><%=org.organization_id%></td>
                        <td><%=org.organization_name%></td>
                        
                        </tr>   
                                            
                    <%});%>
                    </tbody>
                
            </tbody>
        </table>     
        </div>
    </div>

</div>
</div>