<div class="col-lg-9">
        <h2>Heat Map by Skill.</h2>
        <form action="/location/heatmapSkill" method="POST">  
        <div class="row">                
                <div class="col-lg-3">
                                <p>Country :</p>
                        </div>  
                <div class="col-lg-4">
                        <select class="custom-select" id="country" name="country">
                                <option value="All">All</option>
                        <%locations.forEach(function(location){%>                                
                                <option value="<%=location.location_name%>"><%=location.location_name%></option>        
                        <%});%>                                      
                        </select>
                </div>
        </div>
        <div class="row">                
                        <div class="col-lg-3">
                                        <p>Skill :</p>
                                </div>  
                        <div class="col-lg-4">
                                <select class="custom-select" id="skill_name" name="skill_name">  
                                <%skills.forEach(function(skill){%>
                                        <option value="<%=skill.skill_name%>"><%=skill.skill_name%></option>        
                                <%});%>                                      
                                </select>
                        </div>
                </div>
        <div class="row">                
                <div class="col-lg-3">
                               
                        </div>  
                <div class="col-lg-4">
                <button class="bnt btn-primary" type="submit">Find</button>
                </div>
        </div>
                
        </form>

                <br><br><br>
<%if(show=='true'){%>
        <table class="table table-hover table-striped table-hover table-bordered display dt-responsive" cellspacing="0"   name="dataTables-qualifications" 
                       > 
                <thead>
                <th>Product</th>
                <th>Country</th>
                </thead>
                <tbody>
                        <tr>
                                <td><%=skill%></td>
                                <td><%=country%></td>
                        </tr>
                </tbody>
        </table>
                <table>
                        <table class="table table-hover table-striped table-hover table-bordered display dt-responsive" cellspacing="0"   name="dataTables-qualifications" 
                        id='test'>                                                                                                       
                                <tr>                                        
                                        <th>Group</th>
                                        <th>Skill</th>
                                        <th>Total</th>
                                        <th colspan="5" align="center">Proficiency</th>
                                        
                                </tr>
                                <tr>
                                        <td></td>
                                        <td></td>
                                        <td></td>
                                        <td align="center">1</td>
                                        <td align="center">2</td>
                                        <td align="center">3</td>
                                        <td align="center">4</td>
                                        <td align="center">5</td>                         
                                

                                </tr>
                                
                                <tbody>
                                        <%recs.forEach(function(rec){%>
                                                <tr>
                                                
                                                <%var sg_row=0%>
                                                <%rec.skill_group.forEach(function(sg){%>
                                                  <%if(sg_row!=0){%>
                                                    <tr></tr>                                                      
                                                  <%};%>
                                                  <td><%=sg.skill_group_name%></td>              
                                                      <%var sk_row=0;%>
                                                      <%if(sg.skills.length==0){%>
                                                      <td></td>
                                                      
                                                      </tr>
                                                      <%}else{%>
                                                      
                                                        <%}%>
                                                      <%sg.skills.forEach(function(skill){%>
                                                        <%if(sk_row!=0){%>
                                                          <tr>
                                                            <td></td>
                                                                
                                                        <%}%>
                                                        <td><%=skill.skill%></td>
                                                        <%var proftot=0;prof_1=0;prof_2=0;prof_3=0;prof_4=0;prof_5=0%>
                                                        <td id="<%=sg_row%><%=sk_row%>" align="center"  style="font-weight:bold"></td>
                                                        <td align="center"  id="prof1_<%=sg_row%><%=sk_row%>" style="font-weight:bold;"></td>
                                                        <td align="center"  id="prof2_<%=sg_row%><%=sk_row%>" style="font-weight:bold;"></td>
                                                        <td align="center"  id="prof3_<%=sg_row%><%=sk_row%>" style="font-weight:bold;"></td>
                                                        <td align="center"  id="prof4_<%=sg_row%><%=sk_row%>" style="font-weight:bold;"></td>
                                                        <td align="center"  id="prof5_<%=sg_row%><%=sk_row%>" style="font-weight:bold;"></td>
                                                  
                                                        <%users.forEach(function(user1){%>
                                                                <%if(user1.skillset[0].skill_group[sg_row].skills[sk_row].skill == skill.skill){%>
                                                                        <%if(user1.skillset[0].skill_group[sg_row].skills[sk_row].proficiency == 1){%>
                                                                                <%prof_1 ++%>
                                                                        <%}else if(user1.skillset[0].skill_group[sg_row].skills[sk_row].proficiency == 2){%>
                                                                                <%prof_2 ++%>
                                                                        <%}else if(user1.skillset[0].skill_group[sg_row].skills[sk_row].proficiency == 3){%>
                                                                                <%prof_3 ++%>
                                                                        <%}else if(user1.skillset[0].skill_group[sg_row].skills[sk_row].proficiency == 4){%>
                                                                                <%prof_4 ++%>
                                                                        <%}else if(user1.skillset[0].skill_group[sg_row].skills[sk_row].proficiency == 5){%>
                                                                                <%prof_5 ++%>
                                                                        <%}%>
                                                                
                                                                
                                                                <%};%>
                                                                <%})    %>
                                                                <script>
                                                                        document.getElementById("prof1_<%=sg_row%><%=sk_row%>").innerHTML   = <%=prof_1%>;
                                                                        document.getElementById("prof2_<%=sg_row%><%=sk_row%>").innerHTML   = <%=prof_2%>;
                                                                        document.getElementById("prof3_<%=sg_row%><%=sk_row%>").innerHTML   = <%=prof_3%>;
                                                                        document.getElementById("prof4_<%=sg_row%><%=sk_row%>").innerHTML   = <%=prof_4%>;
                                                                        document.getElementById("prof5_<%=sg_row%><%=sk_row%>").innerHTML   = <%=prof_5%>;
                                                                </script>
                                                        
                                                                <script>
                                                                
                                                                        document.getElementById("<%=sg_row%><%=sk_row%>").innerHTML   = "<%=prof_1+prof_2+prof_3+prof_4+prof_5%>";
                                                                        
                                                                </script>
                                                          
                                                        
                                                        <%sk_row++;%>
                                                      </tr>
                                                        <%});%>
                                                    </tr>
                                                  <%sg_row++;%>
                                                  <%});%> 
                                                  <tr class="">
                                                    <td></td>
                                                  <td></td>
                                                  <td></td>
                                                <td></td></tr>
                                              <% });%>  
                                </tbody>
                        </thead>
                </table>
                <%}%>
</div>